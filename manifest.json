{
  "name": "Chrome Duplicate Tab Closer",
  "description": "Closes duplicate tabs when you try to open them.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "tabs"],
  "action": {
    "default_icon": {
      "16": "/images/new-tab-icon16.png",
      "32": "/images/new-tab-icon32.png",
      "48": "/images/new-tab-icon48.png",
      "128": "/images/new-tab-icon128.png"
    }
  },
  "icons": {
    "16": "/images/new-tab-icon16.png",
    "32": "/images/new-tab-icon32.png",
    "48": "/images/new-tab-icon48.png",
    "128": "/images/new-tab-icon128.png"
  },
  "options_page": "options.html"
}
